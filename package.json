{
  "name": "kafka-ecommerce",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "scripts": {
    "dev:order": "npm --workspace services/order-service run dev",
    "dev:payment": "npm --workspace services/payment-service run dev",
    "dev:inventory": "npm --workspace services/inventory-service run dev",
    "dev:notification": "npm --workspace services/notification-service run dev",
    "dev:all": "npm-run-all -p dev:payment dev:inventory dev:notification dev:order",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down -v"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  }
}
